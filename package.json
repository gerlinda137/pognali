{
  "name": "pognali",
  "version": "",
  "private": true,
  "description": "Личный проект «Погнали» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "^9.7.6",
    "browser-sync": "2.26.x",
    "del": "^5.1.0",
    "gulp": "4.0.x",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "8.0.x",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "2.6.x",
    "stylelint": "^13.3.3",
    "stylelint-config-htmlacademy": "^0.1.4"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/scss/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp css",
    "start": "gulp start"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/scss/**/*.scss"
  ],
  "engines": {
    "node": "8.16"
  }
}
